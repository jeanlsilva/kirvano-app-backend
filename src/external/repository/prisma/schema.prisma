generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model card {
  id            Int     @unique @default(autoincrement())
  name          String
  number        String
  expiry_month  Int
  expiry_year   Int
  cvc           String
}

model address {
  id            Int     @unique @default(autoincrement())
  first_line    String
  street_name   String
  postcode      String
}